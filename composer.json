{
    "name": "collaborar/lingui-laravel",
    "type": "library",
    "description": "Use Laravel translations on front-end with LinguiJS",
    "keywords": [
        "laravel",
        "localization",
        "typescript",
        "lingui",
        "i18n",
        "translations"
    ],
    "homepage": "https://github.com/collaborar/lingui-laravel",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/collaborar/lingui-laravel/issues",
        "source": "https://github.com/collaborar/lingui-laravel"
    },
    "authors": [
        {
            "name": "Paulo Ferreira",
            "email": "paulo@collaborar.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/filesystem": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.24",
        "orchestra/testbench": "^10.1|^9.0",
        "phpunit/phpunit": "^10.4|^11.5",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Lingui\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lingui\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "@php vendor/bin/pint"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lingui\\LinguiServiceProvider"
            ]
        }
    }
}
